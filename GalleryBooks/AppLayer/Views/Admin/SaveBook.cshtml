@model Books
@{
    Layout = "~/Views/_Layout.cshtml";
}

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Save Book";
    <link href="~/css/bootstrap.css" rel="stylesheet" />

}
<body style="background-color:dimgrey">
<table class="table table-bordered">
        <h3 class="text-center" style="color:darkblue">
            ADD NEW BOOKS   
        </h3>
</table>

@using(Html.BeginForm("SaveBook","Admin",FormMethod.Post))
{

     <div class="form-row">

       <div class="form-group col-md-6">
            <label for="Isbn">Isbn</label>
            <input type="number" asp-for="ISBN" class="form-control" placeholder="Enter the book Isbn"  />
             <div><span asp-validation-for="ISBN" style="color:red"></span></div> 
       </div>
        <div class="form-group col-md-6">
            <label for="BooksName">BooksName</label>
            <input type="text" asp-for="BookName" class="form-control" placeholder="Enter the book name"  />
             <div><span asp-validation-for="BookName" style="color:red"></span></div> 
        </div>
        <div class="form-group col-md-6">
            <label for="AuthorName">AuthorName</label>
            <input type="text" asp-for="AuthorName" class="form-control" placeholder="Enter the author name" />
              <div><span asp-validation-for="AuthorName" style="color:red"></span></div> 
        </div>
        <div class="form-group col-md-6">
            <label for="TotalPages">Total pages</label>
            <input type="text" asp-for="TotalPages" class="form-control" placeholder="Enter the total page " />
              <div><span asp-validation-for="TotalPages" style="color:red"></span></div> 
        </div>
         <div class="form-group col-md-6">
            <label for="PublisherId">Publisher Id</label>
            <input type="text" asp-for="PublisherId" class="form-control" placeholder="Enter the total page " />
              <div><span asp-validation-for="PublisherId" style="color:red"></span></div> 
        </div>
        <div class="form-group col-md-6">
           <label for="BookGenre">Category</label>
            <select  asp-for="BookGenre" class="form-control" >
                <option value="Novel">Novel</option>
                <option value="Fiction">Fiction</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Technology">Technology</option>
                <option value="Narrative">Narrative</option>
                <option value="ScienceFiction">ScienceFiction</option>
                <option value="MyStery">MyStery</option>
                <option value="Horror">Horror</option>
            </select>
            <div><span asp-validation-for="BookGenre" style="color:red"></span></div> 
        </div>
       
        <div class="form-group col-md-6">
           <label for="Book URLe">Description Url</label>
           <input asp-for="DescriptionUrl" type="text" class="form-control" placeholder="Enter the book url">
           <div><span asp-validation-for="DescriptionUrl" style="color:red"></span></div> 
        </div>
        <div class="form-group col-md-6">
           <label for="Book URLe">Image Url</label>
           <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Enter the book url">
           <div><span asp-validation-for="ImageUrl" style="color:red"></span></div> 
        </div>
        <br>
        <div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>

     </div>
}
</body>
   
